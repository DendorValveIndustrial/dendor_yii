!!! 5
%html(lang = "#{Yii::app()->getLanguage()}")
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")/
    %meta(http-equiv="Content-Language" content="#{Yii::app()->getLanguage()}")/
    %title= $this->pageTitle
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    :php
      Yii::app()->bootstrap->register();
      Yii::app()->clientScript->registerCssFile(Yii::app()->theme->baseUrl.'/css/home.css');
  %body#root
    .layout
      %header.header(role="banner")
        .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
          .navbar-inner
            .container
              = CHtml::link('Dendor Valve', Yii::app()->createUrl('site/index'), array('class'=>'brand span2'))
              .nav-collapse.collapse
                :php
                  $this->widget('zii.widgets.CMenu',array(
                    'items'=>array(
                      //array('label'=>Yii::t('app', 'home'), 'url'=>array('/site/index')),
                      array('label'=>Yii::t('app', 'about'), 'url'=>array('/site/page', 'view'=>'about')),
                      array('label'=>Yii::t('app', 'production'), 'url'=>array('/catalog/catalog/index')),
                      array('label'=>Yii::t('app', 'news'), 'url'=> array('/news/news/index')),
                      array('label'=>Yii::t('app', 'contact'), 'url'=>array('site/contact')),
                      array('label'=>Yii::t('app', 'admin').' ('.Yii::app()->user->name.')', 'url'=>array('admin/default/index'), 'visible'=>!Yii::app()->user->isGuest)
                    ),
                    'activeCssClass'=>'active',
                    'htmlOptions'=>array(
                        'class'=>'nav',
                    ),
                  ));
                -$this->widget('application.modules.languages.widgets.langSwitch.LangSwitchWidget', array('url'=>$this->url, 'htmlOptions'=>array('class'=>'nav pull-right country')))
        / navbar
        .container
          .row-fluid.head
            .span3
              .logo= CHtml::image('/img/logo/logo-wite270.png',CHtml::encode(Yii::app()->name), array('width'=>'269', 'height'=>'82'))
              .contact-top.text-center(role="contentinfo")
                .address
                  ul. Jaśkowa Dolina 81
                  %br/
                  80-286 Gdańsk, Polska
                .tel= CHtml::encode(Yii::app()->params['telOfficePol'])
                .email
                  = TbHtml::icon(TbHtml::ICON_ENVELOPE, array('color'=>TbHtml::ICON_COLOR_WHITE))
                  = TbHtml::mailto(Yii::app()->params['officeEmail'],Yii::app()->params['officeEmail'], array('itemprop'=>'email'))
            .span9
              .wrap-slider
                %h1.pull-left= Yii::t('app', 'pipeline_valves')
                .pull-right.img-slider= CHtml::image(Yii::app()->theme->baseUrl.'/img/slide1.png','Armatura przemysłowa', array('width'=>'245', 'height'=>'395'))
                .slider#slider
                  = $this->widget('ext.slidr.SliderHome',array(), true)
        / head
      / header
      %main.main(role="main")
        .container
          = $content
        / content
      .layout-footer
    %footer.footer(role="contentinfo")
      .container
        .row
          .text-center
            Copyright &copy; #{date('Y')} by #{CHtml::encode(Yii::app()->name)}. Yii v.#{CHtml::encode(Yii::getVersion())}
    / footer
